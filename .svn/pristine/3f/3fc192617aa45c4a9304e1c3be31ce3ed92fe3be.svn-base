* {
	font-family: "microsoft yahei";
}
html{overflow-x:hidden;}
body {
	background-color: #F1F4F7;
	overflow-x:hidden;
}
/* .custom-navbar{margin:0 -15px !important;} */
.navbar-inverse .navbar-brand{color:#fff;}
.carousel-custom{max-height:500px;  overflow: hidden; margin-bottom: 10px;}
.carousel-custom img{height: 500px; width:100%}
.carousel-info1{
	left: 15%;
	top: 20%;
	text-align: left;
}
.carousel-info2{
	right: 15%;
	top: 20%;
	text-align: left;
}
.carousel-info3{
	right: 25%;
	top: 20%;
	text-align: right;
}
.footer {
	padding: 10px 0;
	color: #ccc;
	text-align: center;
	background-color: #444;
	border-top: 1px solid #e5e5e5;
	overflow: hidden;
	clear: both;
}
.footer2 {
	padding: 10px 0;
	color: #ccc;
	text-align: center;
	background-color: #444;
	border-top: 1px solid #e5e5e5;
	overflow: hidden;
	clear: both;
}
.login-box {
	width: 400px;
	margin: 4% auto;
}
@media screen and (max-width:768px) {
	.login-box {
		width: 90%;
	}
}
.login-box p {
	text-align: center;
    font-size: 20px;
    color: #fff;
    margin-bottom: 20px;
}

.login-box .login-logo {
	color: #fff;
	font-size: 36px;
	text-align: center;
	margin-bottom: 20px;
}

.login-box .login-box-body {
	border-radius: 6px;
	padding: 30px 40px;
	background-color: rgba(255,255,255,.3);
	box-shadow: 0 0 4px rgba(0, 0, 0, .1);
}

.login-box form .form-control {
	padding-left: 30px !important;
	margin-bottom: 30px;
	
}

.login-box form .form-group i.onlyicon {
	color: #bbb;
	display: block !important;
	font-size: 16px;
	height: 16px;
	margin: 12px 2px 4px 10px;
	position: absolute !important;
	text-align: center;
	width: 16px;
	z-index: 1;
}

.login-help {
	padding: 10px 0 20px 0;
}
.login-help a{color:#fff;}
.nav-tabs-custom {
	margin: 10px 0 20px 0;
	box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
}

.nav-tabs-custom>.nav-tabs {
	background-color: #f9f9f9;
	border-top: 3px solid #3c8dbc;
}

.nav-tabs-custom>.tab-content {
	background-color: #fff;
	padding: 10px;
}

.cos-tabs>li {
	width: 25%;
}

.nav-tabs-custom>.nav-tabs>li {
	text-align: center;
}

.nav-tabs-custom>.nav-tabs>li>a,
.nav-tabs-custom>.nav-tabs>li>a:hover {
	background: transparent;
	margin: 0;
}

.nav-tabs-custom>.cos-tabs>li.active>a,
.nav-tabs-custom>.nav-tabs>li.active>a:hover {
	border-top-color: transparent;
	border-left-color: #ddd;
	border-right-color: #ddd;
}

.nav-tabs-custom>.nav-tabs>li.active>a,
.nav-tabs-custom>.nav-tabs>li.active:hover>a {
	background-color: #fff;
	color: #444;
}

.nav-tabs-custom>.nav-tabs>li>a,
.nav-tabs-custom>.nav-tabs>li>a:hover {
	background: transparent;
	margin: 0;
}

.nav-tabs-custom>.nav-tabs>li>a:hover {
	border: 1px solid transparent;
}

.nav-tabs-custom>.nav-tabs>li:first-of-type>a,
.nav-tabs-custom>.nav-tabs>li:first-of-type>a:hover {
	border-left-color: transparent;
}

.nav-tabs-custom>.nav-tabs>li:last-of-type>a,
.nav-tabs-custom>.nav-tabs>li:last-of-type>a:hover {
	border-right-color: transparent;
}
.whole-country,.pro-city{
	height:450px;
}
.nav-tabs-header{box-shadow: none;margin:0}
.nav-tabs-header .nav-tabs{
	position: absolute;
	top:2px;
	border: none;
	right: 18px;
}
.nav-tabs-header .nav-tabs li{
	padding: 0 10px;
}

.nav-tabs-header .nav-tabs li.active{
	background-color: #FFF;
	border-left: 1px solid #eee;
	border-right: 1px solid #eee;
}
.nav-tabs-header .nav-tabs li:first-of-type{
	border-left: none;
}
.nav-tabs-header .nav-tabs li:last-of-type{
	border-right: none;
}
.nav-tabs-header .nav-tabs li.active a{
	border: none;
}
.chartbox{height:450px;}
.back-btn{position:absolute;right:5px; top:-10px;}
@media (max-width:374px ) {
	.nav-tabs-header .nav-tabs li{padding: 0;}
}
@media (max-width:414px ) {
	.chartbox{height:350px;}
}
/*===============================*/
.user-menu {
    display: inline-block;
    margin-top: 14px;
    margin-right: 10px;
    float: right;
    list-style: none;
    padding: 0;
}
.user-menu a{color: #fff;}
.user-menu a:hover{text-decoration: none;}
.main-content{
	margin-left: 200px;
	padding: 0;
}
.nav-list{
	list-style: none;
	padding: 0;
}
.nav-list>li{
	position: relative;
}
.nav-list>li>a{
	display: block;
	padding:12px 15px;
	color: #5BC0DE;
	border-bottom: 1px solid #f1f1f1;
}
.nav-list>li>a:hover{
	text-decoration: none;
	background-color: #f8f8f8;
}
.nav-list li.active a{
	background-color: #5BC0DE;
	color: #fff;
}
.breadcrumb{
	border-radius: 0;
    padding: 10px 15px;
    background: #e9ecf2;
    margin: 0;
    border-bottom: 1px solid #e0e2e6;
}

@media (min-width: 768px){
	.sidebar {
	    display: block;
	    position: fixed;
	    top: 50px;
	    bottom: 0;
	    left: 0;
	    z-index: 1000;
	    margin: 0;
	    padding: 0;
	    overflow-x: hidden;
	    overflow-y: auto;
	    background-color: #fff;
	    box-shadow: 1px 0px 10px rgba(0, 0, 0, .05);
	}
}
@media (max-width: 768px) {
    .sidebar{
  	    width:190px;
	  	position: absolute;
	  	top:50px;
	  	margin: 0;
	  	padding: 0;
	  	background-color: #fff;
	  	z-index: 1000;
	  	box-shadow: 2px 1px 2px 0 rgba(0,0,0,0.15);
	  	transform:translateX(-190px);
	  	transition: transform 0.2s linear 0s, max-height 0s linear 0.2s;
    }
    .sidebar.display{
	    transform: none !important;
    }
    .carousel-custom{margin-bottom:0;}
    .custom-navbar{min-height:40px;}
	.custom-navbar .navbar-brand{
		height:40px;
		padding:10px 15px;
	}
	.panel-heading{padding:6px 15px;}
	.nav-tabs-header .nav-tabs{
		height:32px;
		top:3px;
		overflow:hidden;
	}
	.nav-tabs-header .nav-tabs li a{padding:5px 15px;}
	.whole-country, .pro-city{height:220px; overflow-y:auto;}
	.keshi-tab{margin-top:35px;}
	.table-responsive>.table-bordered>tbody>tr:last-child>td{border-bottom:1px solid #ddd !important;}
}

	