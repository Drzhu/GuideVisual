function bar1(bar1_legend_list,bar1_data1_list,bar1_data2_list){
	var option = {
			tooltip: {
				trigger: 'axis',
				formatter :function (params, ticket, callback) {
					return params[0].name+"</br>"+params[0].seriesName+'：'+params[0].value+"</br>"+params[1].seriesName+'：'+(params[1].value/15);
				     },
				axisPointer: {
					type: 'shadow'
				},
				position: function (point, params, dom) {
				      return ["30%", point[1]];
				  }
			},
			legend: {
				data: ['讲课医生人数','看课患者人数'],
			},
			grid: {
				left:0,
				top:'3%',
				right: '3%',
				bottom: '3%',
				containLabel: true
			},
			xAxis: {
				position: 'top',
				axisLine: {
					show: true,
					lineStyle: {
						type: 'solid'
					},
				},
				axisLabel :{
					formatter:function (value, index) {
						return value/10000+"万";
					},
					textStyle :{
						fontSize :9
					},
					margin :5
				},
				axisTick: {
					show: false
				},
				splitLine: {
					show: false
				},
				type: 'value',
				boundaryGap: [0, 0.01]
			},
			yAxis: {
				type: 'category',
				axisLabel :{
					formatter:function (value, index) {
						return value.substr(0, 2)+"...";
					},
					margin :1
				},
				axisTick: {
					show: false
				},
				onZero :false,
				data: bar1_legend_list
				
			},
			series: [
			         {
				name: '讲课医生人数',
				symbol: 'none',
				type: 'bar',
				data: bar1_data2_list
			},{
				name: '看课患者人数',
				symbol: 'none',
				type: 'bar',
				barGap : '0%',
				barCategoryGap :'30%',
				itemStyle: {
					normal: {
						color: '#ca8622'
					}
				},
				data: bar1_data1_list
			}
			]
		};
	return option;
}
function bar2(bar1_legend_list,bar1_data1_list,bar1_data2_list){
	var option = {
			title: {
				text: '患者&总时长',
				subtext: '数据来自盖德数据中心'
			},
			tooltip: {
				trigger: 'axis',
				axisPointer: {
					type: 'shadow'
				}
			},
			legend: {
				data: ['观看患者人数','观看总时长']
			},
			grid: {
				left: '3%',
				right: '4%',
				bottom: '3%',
				containLabel: true
			},
			xAxis: {
				position: 'top',
				axisLine: {
					show: true,
					lineStyle: {
						type: 'solid'
					}
				},
				axisTick: {
					show: true
				},
				splitLine: {
					show: false
				},
				type: 'value',
				boundaryGap: [0, 0.01]
			},
			yAxis: {
				type: 'category',
				data: bar1_legend_list
			},
			series: [{
				name: '观看患者人数',
				symbol: 'none',
				itemStyle: {
					normal: {
						color: '#ca8622'
					}
				},
				type: 'bar',
				data: bar1_data1_list
			},
			{
				name: '观看总时长',
				symbol: 'none',
				itemStyle: {
					normal: {
						color: [ 'orangered', 'yellow', 'lightskyblue' ],
					}
				},
				type: 'bar',
				data: bar1_data2_list
			}
			]
		};
	return option;
}